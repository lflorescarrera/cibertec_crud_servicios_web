@model ProductViewModel;
@{
    ViewData["Title"] = "Edit";
}

<h1>Edición de producto</h1>

<div class="row mt-5">
    <form method="post" asp-action="EditSave" style="width:100%">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Id"></label>
                    <input type="text" asp-for="Id" class="form-control" readonly="true"/>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Price"></label>
                    <input type="text" asp-for="Price" class="form-control" />
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6">
                    <label asp-for="Stock"></label>
                    <input type="text" asp-for="Stock" class="form-control" />
                </div>
                <div class="col-md-6">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <button class="btn btn-primary">Actualizar</button>
                    <a class="btn btn-primary" asp-action="List" asp-controller="Product">Volver</a>
                </div>
            </div>
        </div>
    </form>
